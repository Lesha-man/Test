            <CollectionView x:Name="daysCollection"
                            ItemsSource="{Binding Months}"
                            Scrolled="daysCollection_Scrolled"
                            Grid.Row="2"
                            Grid.ColumnSpan="7">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout SnapPointsAlignment="Start"
                                       SnapPointsType="MandatorySingle"
                                       Orientation="Horizontal"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="0" 
                               WidthRequest="{Binding Width, Source={x:Reference this}}">
                        <FlexLayout x:DataType="controls:Month"
                                    BindableLayout.ItemsSource="{Binding Days}"
                                    Wrap="Wrap">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Frame x:DataType="sys:DateTime"
                                            Padding="0"
                                            HasShadow="False"
                                            BackgroundColor="Transparent"
                                            BorderColor="LightGray"
                                           FlexLayout.Basis="14.28%">
                                        <Grid BackgroundColor="Transparent">
                                            <Label Text="{Binding Day}" 
                                                    VerticalTextAlignment="Center"
                                                    HorizontalTextAlignment="Center"
                                                    TextColor="Black"
                                                    HorizontalOptions="FillAndExpand"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <BoxView BackgroundColor="Black" 
                     HeightRequest="1" 
